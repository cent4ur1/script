(defcfg
  ;; This tells Kanata which keyboards to intercept
  macos-dev-names-include (
    "Apple Internal Keyboard / Trackpad"
    "USB Receiver"
    "RGB Keyboard"
  )
)

(defsrc
  h j k l lctl
)

(defalias
  ;; Tap for Left Control, Hold for Vim Arrow layer
  nav (tap-hold 200 200 lctl (layer-toggle arrows))
)

(deflayer default
  h j k l @nav
)

(deflayer arrows
  left down up rght _
)
